{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run Extension",
        "type": "extensionHost",
        "request": "launch",
        "args": [
          "--extensionDevelopmentPath=${workspaceFolder}/vscode-extension"
        ],
        "outFiles": [
          "${workspaceFolder}/vscode-extension/dist/**/*.js"
        ],
        "preLaunchTask": "npm: watch",
        "sourceMaps": true,
        "internalConsoleOptions": "neverOpen"
      },
      {
        "name": "Extension Tests",
        "type": "extensionHost",
        "request": "launch",
        "args": [
          "--extensionDevelopmentPath=${workspaceFolder}/vscode-extension",
          "--extensionTestsPath=${workspaceFolder}/vscode-extension/dist/test/suite/index"
        ],
        "outFiles": [
          "${workspaceFolder}/vscode-extension/dist/**/*.js"
        ],
        "preLaunchTask": "npm: watch"
      }
    ]
  }